.nav {overflow: hidden;clear:both;}
.category {width:92%;float:left;display:flex;justify-content: space-around;}
.show {float: right;width: 8%;}
.arrowDown {width:28rpx;height:28rpx;text-align: center;vertical-align: middle;}
.kind {font-size: 28rpx;padding:5rpx;}
.on {color:rgb(232, 147, 23);}
.container {
  width: 100%;
  height:100vh;
  
}
.pop-up {
  width:100%;
  height: 300rpx;
  position:fixed;
  background: #fff;
  top:47rpx;
  border-top:4rpx solid #ccc;
  left:0;
  z-index: 99;
}
.box {
  display:flex;
  margin-left:30rpx;
  flex-wrap: wrap;
}
.cate {
  font-size: 28rpx;
  color:#000;
  padding:10rpx;
  border:2rpx solid #999;
  border-radius:18rpx;
  margin: 20rpx;
}

.goodsList{
  width:100%;
}
.items {
  width:100;
  border-bottom:4rpx solid #ccc;
  display: flex;
  padding:10rpx 20rpx;
  background: #fff;
}
.item-thumb {
  flex:1;

}
.vip {
  font-size:24rpx;
}
.vip-img {
  width:24rpx !important;
  height:24rpx !important;
  vertical-align: bottom !important;

}
.vip-normal {
  font-size:22rpx;
  color:#000;
}
.goodsImg {
  width:100rpx;
  height:100rpx;
  display:block;
  margin-right:10rpx;
}
.item-name {
  flex:2;
  text-align: left;
}
.goodsName{
  font-size: 32rpx;
  margin-left:40rpx;
  margin-top:20rpx;
}
.item-price {
  font-size: 40rpx;
  color:#F00;
  margin-top:30rpx;
  margin-left:190rpx;
}
.item-opera {
  flex:1;
}
.btn {
  
  font-size: 24rpx;
  display: block;
  color:#fff;
  padding:0;
  border-radius: 40rpx;
  background:#f00;
  margin-top:40rpx;

}
.btn.active {
  background-color:#999 !important;
  color:#fff !important;
}
.item-expand {
  font-size: 24rpx;
  margin-top:10rpx;
  margin-left: 83rpx;
 
}
.showDown {
  width:40rpx;
  height:40rpx;
  vertical-align: middle;
}
.item-list {
  width:100;
  border-bottom:4rpx solid #ccc;
  display: flex;
  padding:10rpx 20rpx;
  background: #fff;
}
.item-box {
  transition: height 1s;
}