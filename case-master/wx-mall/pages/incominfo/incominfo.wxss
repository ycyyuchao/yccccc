
.scoreCate{
  width: 94%;
  margin:0 auto;
  border-bottom:4rpx solid rgb(244, 242, 242);
  display: flex;
}
.score,.rateReduce,.useless,.overtime {
  width:100%;
 
  padding:35rpx 15rpx;
  display: flex;
  
}
.scoreName {
  font-size:32rpx;
  
  
}
.score,.useless {
  width:150%;
  
}

.rateReduce::after {
  content:'';
  height:60rpx;
  display: block;
  border-left:4rpx solid #ccc;
  position: relative;
  left:-300rpx;
  top:0;
}
.overtime::after{
   content:'';
  height:60rpx;
  display: block;
  border-left:4rpx solid #ccc;
  position: relative;
  left:-286rpx;
  top:0rpx;
}
.num {
  font-size: 38rpx;
  color:rgb(234, 168, 71);
}
.rate {
  font-size: 38rpx;
  color:#f00;
}

.unnum{
  font-size: 38rpx;
  color:#999;
}
.over{
  font-size: 38rpx;
  color:#666;
}
.scoreChange {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding:30rpx 0;
  border-bottom:4rpx solid rgb(244, 242, 242);
 
}
.change {
  font-size: 32rpx;
  font-weight: 400;

}

.on {
  color:#f00;
  font-weight: 600;
}
.time {
  width: 100%;
  padding:16rpx 30rpx;
  background:rgb(244, 242, 242);
  font-size:28rpx;
}

.sign {
  width:100%;
  padding:20rpx;
  border-bottom:4rpx solid rgb(244, 242, 242);
  display: flex;
  align-items:center;  
}
.left {
  flex:1;
  margin-left:20rpx;

}
.scoreFrom {
  font-size: 32rpx;
  
}
.date {
  font-size:28rpx;
  display: inline-block;
}
.right {
  font-size:48rpx;
  color:rgb(234, 168, 71);
}
.unusing{
  width: 94%;
  margin:0 auto;
  background: #ccc;
  padding-bottom:20rpx;
  margin-top: 10rpx;

}
.unusingItem{
  width: 94%;
  margin:0 auto;
  border-bottom: 2rpx solid #fff;

}
.unusingTop{
  width: 100%;
  
  clear: both;
  overflow: hidden;
  padding:10rpx;

}
.topLeft{
  font-size:28rpx;
  color:#fff;
  float: left;
}
.topRight{
  float: right;
  font-size: 36rpx;
  color:#fff;
  margin-top:10rpx;
}
.unusingBottom{
  width: 100%;
  clear: both;
  overflow: hidden;
}
.bottomleft{
  float: left;
  font-size: 24rpx;
  color: #fff;

}
.bottomRight{
  float: right;
  font-size: 24rpx;
  color: #fff;
  margin-right: 20rpx;
}