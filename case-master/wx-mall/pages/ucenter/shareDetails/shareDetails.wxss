/* pages/ucenter/shareDetails/shareDetails.wxss */
.container{
  width:100%;
  height: 100vh;
  background: #f9f9f9;
}
.title{
  width: 100%;
  border-top:#f9f9f9 solid 5rpx;
  background: #fff;
  padding:10rpx 0;
  font-size: 28rpx;
  padding-left:10rpx;

}
.month {
  padding:10rpx;
  font-size:24rpx;
}
.item{
  width:100%;
  padding:10rpx;
  overflow: hidden; 
  background:#fff;
}
.left {
  float:left;

}
.consume {
  font-size:28rpx;
  margin-bottom:14rpx;
}
.date {
  font-size:24rpx;
}
.score{
  font-size:36rpx;
  color:#fd9d53;
  float:right;
  vertical-align: bottom;
  line-height: 84rpx;
}

.share-relation {
  width:100%;
  border-bottom:2rpx solid #ccc;
}
.share-cate {
  width:100%;
  font-size:24rpx;
  padding:10rpx;
  border-bottom: 2rpx solid #ccc;
}
.share-parson {
  width:100%;
  display:flex;
  text-align: center;
  padding:10rpx 0;
  border-bottom: 2rpx solid #ccc;
  background: #fff;
}
.share-photo {
  width:80rpx;
  height:80rpx;
  display:block;
  border-radius: 50%;
  background:#fff;
  margin-left:20rpx;
 
}
.share-nick{
  flex:2;
  font-size:28rpx;
}
.vip {
  color:#fd9d53;
  margin-top:14rpx;
  font-size:24rpx;
}
.vip-icon {
  width:30rpx;
  height:30rpx;
  display: inline-block;
  vertical-align: bottom;
 
  
}
.share-profit {
  flex:2;
  margin-left:100rpx;

}
.share-friends,.share-total {
  display: flex
}
.share-num {
  font-size:36rpx;
  font-weight: 500;
  color:#fd9d53;
  margin-left: 20rpx;
  
}
.share-total {
  margin-top: 10rpx;
}