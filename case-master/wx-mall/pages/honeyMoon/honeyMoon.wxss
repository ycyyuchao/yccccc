/* S 领取优惠券 */
.coupon {
  width:100%;
  padding: 20rpx;
  background: #fff;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
}
.coupon-header {
  width:100%;
  display:flex;
  align-items: center;
 
}
.coupon-header-a{
  font-size:28rpx;
  flex:1;
}
.coupon-header-b {
  flex: 3;
  

}
.coupon-logo {
  width:40rpx;
  height:40rpx;
  float: left;
  
}
.coupon-header-get {
  
  font-size: 28rpx;
}
.coupon-header-getNum{
  font-size: 36rpx;
  color:#f48f18;
  display:inline-block;
}
.coupon-header-goto {
  
  font-size:28rpx;
}
.goto {
  width:30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.coupon-middle {
  margin-top:20rpx;
  margin-bottom:20rpx;
  display: flex;
  justify-content: space-around;
}
.coupon-middle-a,.coupon-bottom-a {
  font-size: 28rpx;
  box-sizing:border-box;
  padding:10rpx;
  color:#f48f18;
  background: #fcebeb;
  border-radius: 10rpx;
  
}
.coupon-middle-b{
  font-size:28rpx;
  width:160rpx;
  text-align: center;
  border:#f48f18 2rpx solid;
  border-radius: 8rpx;
  color:#f48f18;
  padding: 10rpx;
  margin-right:60rpx;
  
}

.coupon-bottom {
  margin-left: 40rpx;
  overflow: hidden;
  clear: both;
}
.coupon-bottom-a {
  width:80rpx;
  float: left;
  text-align: center;
}
.coupon-bottom-b{
  font-size: 28rpx;
  margin-left:120rpx;
  margin-top:10rpx;

}
