.container {
  width:100%;
  height:100vh;
  background: #f9f9f9;
}
.goods {
  width:100%;
  background: #fff;
  margin-top:10rpx;
  border-top:2rpx solid #ccc;
  border-bottom:2rpx solid #ccc;
}
.item{
  width: 100%;
  clear: both;
  overflow: hidden;
  padding:20rpx;
  
}
.goodsImg{
  width: 100rpx;
  height:100rpx;
  float: left;
}
.goodsDetails {
  width:75%;
  float: right;
  
}
.top,.bottom{
  width:100%;
  clear: both;
  overflow: hidden;
}
.goodsName{
  float: left;
  font-size: 36rpx;
}
.price{
  float: right;
  font-size: 36rpx;
  color:#ffaf3d;
}
.reduse {
  float: left;
  font-size: 28rpx;
}
.num{
  float: right;
  color:#ffaf3d;
  font-size:28rpx; 
}
.go{
  width:24rpx;
  height:24rpx;
  vertical-align: middle;
}
.sume{
  width: 100%;
  font-size: 32rpx;
  margin-left: 65%;
  
}
.total{
  color:#ffaf3d;
  font-size: 44rpx;
  display:inline-block;

  
}
.appointment{
  width:100%;
  background: #fff;
  margin-top:20rpx;
  border-top:4rpx solid #ccc;
  

}
.choseDate {
  width: 100%;
  padding: 20rpx;
  overflow: hidden;
  
}
.contact{
  width:92%;
  display: block;
  overflow: hidden;
  clear: both;
  border-top:4rpx solid #ccc;
  border-bottom:4rpx solid #ccc;
  margin-left:14rpx;
  padding: 20rpx 0;
}
.promt {
  width:80%;
  float: left;
}
.goto {
  width:30rpx;
  height:30rpx;
  float: right;
  margin-right:20rpx;
}
.input {
  width: 60%;
  float: left;
  margin-top:10rpx;
  display: block;
}
.getCode{
  width:30%;
  border:4rpx solid #13650f;
  border-radius: 50rpx;
  float: right;
  font-size: 28rpx;
  background: #fff;
  margin-right: 20rpx;
}
.verify{
  border:none;
  width:96%;
  background: #f9f9f9;
}
.code {
  width: 88%;
  margin-left:14rpx;
  padding:16rpx;
  border-bottom:4rpx solid #ccc;
}
.toAppoint{
  width:55%;
  display: block;
  text-align: center;
  margin-top:70%;
  border:4rpx solid #13650f;
  border-radius: 50rpx;
  color:#13650f;
}
.dateBox{
  width: 100%;
  height:100vh;
  position: fixed;
  top:0;
  left: 0;
  z-index: 99999;
  background: #fff;
}
.time{
  width: 100%;
  border-top:4rpx solid #ccc;
  margin-top:60rpx;
}
.imply {
  width:100%;
  margin-top:40rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 800;

}
.timing{
  padding:10rpx;
  width:100rpx;
  font-size: 28rpx;
  text-align: center;
  border:4rpx solid #ccc;
  margin:36rpx;
  border-radius: 10rpx;

}
.dateOn {
  background: #335BE2 !important;
  color:#fff !important;
}
.timeBox{
  width:100%;
  padding:20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.submit{
  font-size:32rpx;
  width:150rpx;
  border:4rpx solid #335BE2;
  border-radius: 30rpx;
  text-align: center;
  position: relative;
  bottom:-80rpx;
  left:50%;
  margin-left: -75rpx;
}
