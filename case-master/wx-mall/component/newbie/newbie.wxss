.container{
  width:100%;
  height:100vh;
  padding-top:30%;
  background:radial-gradient(ellipse,#a5a5a5,#949494,#878787,#747474,#626262)
}
.redpocket{
  width: 60%;
  display: block;
  margin: 0 auto;
  
}

.get{
  width: 65%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50rpx;
  text-align: center;
  font-size: 36rpx;
  color:#000;
  background:rgb(221, 188, 132);
  margin-top:80rpx;
}

.giftCard{
  width:80%;
  margin: 0 auto;
  margin-top:30%;
  
}
.header{
  width:100%;
  height: 250rpx;
  background: rgb(231, 53, 53);
  border-top-left-radius: 18rpx;
  border-top-right-radius: 18rpx;

}
.giftTitle{
  width:80%;
  margin: 0 auto;
  text-align: center;
  color:#fff;
  font-size:36rpx;
  font-weight: 600; 
  margin-top:-110rpx;
}
.stars1,.stars2{
  width:140rpx;
  height:140rpx;
  position: relative;
}
.stars1{
  top:70rpx;
  left:50rpx;
}
.stars2{
  top:-110rpx;
  right: -75%;
}
.giftCate {
  width:48%;
  margin: 0 auto;
  white-space: pre-wrap;
  text-align: center;
  font-size: 28rpx;
  color:#fff;
  margin-top:20rpx;
}
.gift{
  width: 100%;
  background: #fff;
  border-bottom-right-radius: 18rpx;
  border-bottom-left-radius: 18rpx;
}
.item{
  width:94%;
  padding:10rpx;
  border-bottom:2rpx solid #ccc;
  margin-left:16rpx;
}
.giftTop{
  display: flex;

}
.giftImg{
  width:80rpx;
  height:80rpx;
}
.giftName{
  margin-left: 30rpx;
  width:57%;
  white-space: pre-wrap;
  font-size: 28rpx;
}
.toUse{
  width:168rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color:#fff;
  background: rgb(231, 53, 53);
  margin-left:70rpx;
  border-radius: 30rpx;
}
.GiftPrice {
  font-size:32rpx;
  font-weight: 800;
  color:rgb(231, 53, 53);
  margin-left:52%;
}
.gifePacks {
  width: 100%;
  height: 100vh;
  background: #626262;
  position: fixed;
  top:0;
  left:0;
  z-index: 99;
}
.backto {
  width: 80rpx;
  height:80rpx;
  display: block;
  margin-left:80%;
  position: relative;
  top:50rpx;
  
 

}
.double{
  width: 100%;
  height: 100vh;
  background: #626262;
  position: fixed;
  top:0;
  left:0;
  z-index: 111;
}
.doubleBox {
  width:80%;
  margin: 0 auto;
  margin-top:30%;
}



.share{
  width: 100%;
  position: fixed;
  top:0;
  left:0;
  z-index: 222;
}
.shareBg{
  width: 100%;
  height:100vh;
}
.share-header{
  width: 80%;
  position: fixed;
  top:50%;
  left:80rpx;
  z-index: 333;

}
.share-title{
  width:100%;
  text-align: center;
  color:#fff;
  font-size: 32rpx;
  margin-top:-165rpx;
}
.share-num {
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  font-weight: 800;
  color:#fff;
}
.share-coupon{
  width:200rpx;
  height:40rpx;
  line-height: 40rpx;
  border-radius: 30rpx;
  background: #fbc44f;
  font-size: 24rpx;
  color:#e6231a;
  margin:0 auto;
  margin-top:6rpx;
}
.share-help{
  width: 66%;
  margin:0 auto;
  height:400rpx;
  position: fixed;
  top:52%;
  left:124rpx;
  z-index: 333;
  background: #fff;
  border-radius: 12rpx;
  display: flex;
  justify-content: space-around;
}
.share-item{
 

}
.sharePocket{
  width:120rpx;
  height:120rpx;
  margin-top:10rpx;

}
.share-add {
  width: 50rpx;
  text-align: center;
  font-size: 36rpx;
  color:#fbc44f;
  font-weight: 600;
  position: relative;
  top:-50rpx;
  left:32rpx;
  
}
.share-cate{
  color:#e6231a;
  width: 100%;
  text-align: center;
  margin-top:-30rpx;
}
.share-people{
  position: fixed;
  top:70%;
  left:124rpx;
  z-index: 333;
  width: 66%;
  display: flex;
  justify-content: space-around;
}
.share-photo{
  width:90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: #ccc;
}
.shareToOthers {
  position: fixed;
  top:88%;
  left:124rpx;
  z-index: 333;
  width:66%;
  height:80rpx;
  line-height: 80rpx;
  font-size:36rpx;
  background: #fbc44f;
  color:#e6231a;
  font-weight: 600;
  border-radius: 30rpx;
  box-shadow: 3rpx 3rpx 6rpx #000;
}
