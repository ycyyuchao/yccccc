/* component/HeaderNav/HeaderNav.wxss */
.nav {position: relative;height :80rpx;line-height: 80rpx;background: #f9f9f9;}
.category {display: flex;flex-wrap: nowrap;width:90%;}
.arrowDown {display:inline-block;width:30rpx;height:30rpx;text-align: center;vertical-align: middle;position: absolute;top: 30rpx;right:20rpx;}
.kind {font-size: 32rpx;text-align:center;padding:10rpx 40rpx;white-space: nowrap;display: inline-block;}
.on {color:rgb(232, 147, 23);}

.pop-up{
  width:100%;
  height:100vh;
  background:rgba(0,0,0,0);
  position:fixed;
  top:0rpx;
  left:0;
  z-index: 90;
}
.zhezhao {
  width:100%;
  height: 300rpx;
  background:#fff;
  position:fixed;
  top:0rpx;
  left:0;
  z-index: 99;
}
.box {
  display:flex;
  margin-left:30rpx;
  flex-wrap: wrap;
  justify-content: space-around;
  
}
.cate {
  font-size: 28rpx;
  color:#000;
  padding:10rpx;
  width: 200rpx;
  border:2rpx solid #ccc;
  border-radius:18rpx;
  text-align: center;
  margin-top:20rpx;
  
}